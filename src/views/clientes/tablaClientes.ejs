<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Document</title>
</head>
<body>
    
    <%- include('../partials/header.ejs') %>

    <main>
        <div class="tableSection">
            <h3>Lista de Clientes</h3>
            <div class="table">
                <table id="clientes" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Razon Social</th>
                            <th>Cuit</th>
                            <th>Direccion</th>
                            <th>Localidad</th>
                            <th>Codigo Postal</th>
                            <th>Provincia</th>
                            <th>Telefono</th>
                            <th>Mail</th>
                            <th>Editar</th>
                            <th>Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0; i < clientes.length; i++){ %>
                            <tr>
                                <td><%=clientes[i].razon_social%></td>
                                <td><%=clientes[i].cuit%></td>
                                <td><%=clientes[i].direccion%></td>
                                <td><%=clientes[i].localidad%></td>
                                <td><%=clientes[i].codigo_postal%></td>
                                <td><%=clientes[i].provincia%></td>
                                <td><%=clientes[i].telefono%></td>
                                <td><%=clientes[i].mail%></td>
                                <td><a href="/admin/clientes/edit/<%=clientes[i].id%>"><i class="far fa-edit"></i></a></td>
                                <td>
                                    <form action="/admin/clientes/delete/<%=clientes[i].id%>?_method=DELETE" method="POST">
                                        <button type="submit">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>        
                                </td>
                            </tr>
                        <% } %>                   
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Razon Social</th>
                            <th>Cuit</th>
                            <th>Direccion</th>
                            <th>Localidad</th>
                            <th>Codigo Postal</th>
                            <th>Provincia</th>
                            <th>Telefono</th>
                            <th>Mail</th>
                            <th>Editar</th>
                            <th>Eliminar</th>
                        </tr>
                    </tfoot>
                </table>

                <a href="/admin/clientes/create" class="crearNuevo">+ Agregar Nuevo</a> 

            </div>
        </div>
    </main>
    
    <%- include('../partials/footer.ejs') %>

    <script src="/js/header.js"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#clientes').DataTable();
        } );
    </script>

</body>
</html>