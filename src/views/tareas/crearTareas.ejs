<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Document</title>
</head>
<body>

    <%- include('../partials/header.ejs') %>

    <main class="create-form">

        <h4>Registrar Tarea</h4>

        <form action="/admin/tareas/create" method="POST" class="row">

            <div class="col-6">

                <div class="form-group usuario-group">
                    <label for="usuario">Tecnico</label>
                    <select name="usuario" id="usuario">
                        <option value="" hidden>Seleccione Tecnico</option>
                        <% for(let i = 0; i < usuarios.length; i++) { %>
                        <option value="<%=usuarios[i].id%>" <%=(typeof old == 'undefined') ? '':(usuarios[i].id == old.usuario) ? 'selected' : '' %> > <%=usuarios[i].usuario%></option>
                        <% } %>
                    </select>
                    <% if(typeof errors != 'undefined'){ %>
                        <% if(typeof errors.usuario != 'undefined'){ %>
                            <small><%= errors.usuario.msg %></small>
                        <% } %>
                    <% } %>
                </div>
                <div class="form-group cliente-group">
                    <label for="cliente">Cliente</label>
                    <select name="cliente" id="cliente">
                        <option value="" hidden>Seleccione Cliente</option>
                        <% for(let i = 0; i < clientes.length; i++) { %>
                            <option value="<%=clientes[i].id%>" <%=(typeof old == 'undefined') ? '':(clientes[i].id == old.cliente) ? 'selected' : '' %> > <%=clientes[i].razon_social%></option>
                        <% } %>
                    </select>
                    <% if(typeof errors != 'undefined'){ %>
                        <% if(typeof errors.cliente != 'undefined'){ %>
                            <small><%= errors.cliente.msg %></small>
                        <% } %>
                    <% } %>
                </div>

                <div class="form-group fecha-group">
                    <label for="fecha">Fecha</label>
                    <input type="date" name="fecha" placeholder="Fecha">
                    <% if(typeof errors != 'undefined'){ %>
                        <% if(typeof errors.fecha != 'undefined'){ %>
                            <small><%= errors.fecha.msg %></small>
                        <% } %>
                    <% } %>
                </div>

            </div>

            <div class="col-6">

                <div class="form-group tipotarea-group">
                    <label for="tipotarea">Tipo de Tarea</label>
                    <select name="tipotarea" id="tipotarea">
                        <option value="" hidden>Seleccione Tipo de Tarea</option>
                        <% for(let i = 0; i < tipoTareas.length; i++) { %>
                            <option value="<%=tipoTareas[i].id%>" <%=(typeof old == 'undefined') ? '':(tipoTareas[i].id == old.tipotarea) ? 'selected' : '' %> ><%=tipoTareas[i].tarea%></option>
                        <% } %>
                    </select>
                    <% if(typeof errors != 'undefined'){ %>
                        <% if(typeof errors.tipotarea != 'undefined'){ %>
                            <small><%= errors.tipotarea.msg %></small>
                        <% } %>
                    <% } %>
                </div>
                <div class="form-group presupuesto-group">
                    <label for="presupuesto">Presupuesto</label>
                    <div class="span">
                        <span class="price-icon"></span>
                        <input type="number" name="presupuesto" placeholder="Presupuesto" id="presupuesto" value="<%= (typeof old == 'undefined') ? '':(typeof old.presupuesto != 'undefined') ? old.presupuesto:'' %>">
                    </div>
                    <% if(typeof errors != 'undefined'){ %>
                        <% if(typeof errors.presupuesto != 'undefined'){ %>
                            <small><%= errors.presupuesto.msg %></small>
                        <% } %>
                    <% } %>
                </div>
                <div class="form-group descripcion-group">
                    <label for="descripcion">Descripcion</label>
                    <input type="text" name="descripcion" placeholder="Descripcion" value="<%= (typeof old == 'undefined') ? '':(typeof old.descripcion != 'undefined') ? old.descripcion:'' %>">
                </div>
            
            </div>

            <div class="form-group button-group">
                <button type="submit">Crear</button>
            </div>

        </form>
    </main>

    <%- include('../partials/footer.ejs') %>

</body>
</html>